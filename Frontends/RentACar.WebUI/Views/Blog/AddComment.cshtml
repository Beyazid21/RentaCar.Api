
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Şərh yazın....</h3>
    <form asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light" method="post">
        <div class="form-group">
            <label for="name">Ad *</label>
            <input Name="Name"  type="text" class="form-control" id="name">
        </div>

        <div class="form-group">
            <label for="name">Email *</label>
            <input Name="Email" type="email" class="form-control" id="name">
        </div>
        <div class="form-group">
         
            <input readonly  value="@ViewBag.id" type="hidden" Name="BlogId"  class="form-control" id="email">
        </div>
     

        <div class="form-group">
            <label for="message">Şərhiniz</label>
            <textarea Name="Desciption" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Şərhi Göndər" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>