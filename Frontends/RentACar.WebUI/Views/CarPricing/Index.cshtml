@model List<ResultCarPricingWithTimePeriod>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Günlük kiralama qiyməti</th>
								<th class="bg-dark heading">Həftəlik kiralama qiyməti</th>
								<th class="bg-black heading">Aylıq kiralama qiyməti</th>
							</tr>
						</thead>
						<tbody>
						

							@foreach(var item in Model)
							{
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url('@Url.Content(item.CoverImageUrl)');"></div></td>
									<td class="product-name">
										<h3>@item.Model @item.BrandName</h3>
										<p class="mb-0 rated">
											<span>rated:</span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
										</p>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Avtomobili kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₼</small> @item.AmountDaily</span>
												<span class="per">/günlük</span>
											</h3>
								
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Avtomobili kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₼</small>@item.AmountWeekly</span>
												<span class="per">/həftəlik</span>
											</h3>
											
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Avtomobili kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₼</small> @item.AmountMonthly</span>
												<span class="per">/aylıq</span>
											</h3>
								
										</div>
									</td>
								</tr>

								<!-- END TR-->

							}

					
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>
