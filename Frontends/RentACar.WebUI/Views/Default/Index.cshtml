@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<style>
    #drop option
    {
        color:black;

    }

</style>
<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_HeadUILayoutViewComponentPartial");
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @await Component.InvokeAsync("_NavbarUILayoutViewComponentPartial");
    <!-- END nav -->
    @await Component.InvokeAsync("_DefaultCoverUILayoutViewComponentPartial");

    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form  method="post" class="request-form ftco-animate bg-primary">
                                <h2>Dərhal Avtomobilinizi İcarəyə Götürün</h2>
                                <div class="form-group">
                                    <label for="" class="label">Alınacaq Yer</label>
                                    @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.V, new {@class = "form-control",@id="drop" })
                                </div>
                     
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alınmaq İstənən Tarix</label>
                                        <input name="pickupdate" type="text" class="form-control" id="book_pick_date" placeholder="Date">
                                    </div>
                                  
                                </div>

                                <div class="d-flex">
                                  
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Geri Qaytarmaq Tarixi</label>
                                        <input name="takeoffdate" type="text" class="form-control" id="book_off_date" placeholder="Date">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Alış Saatı</label>
                                    <input name="pickuptime" type="text" class="form-control" id="time_pick" placeholder="Time">
                                </div>

                                <div class="form-group">
                                    <label for="" class="label">Qaytarma Saatı</label>
                                    <input type="text" name="takeofftime" class="form-control" id="time_pick" placeholder="Time">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-secondary py-3 px-4"  > Uyğun Avtomobilləri Görüntülə </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Avtomobil İcarəsinin Ən Rahat Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almaq İstədiyin Yeri Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Ən Yaxşı Təlklifi Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Öz Avtomobilini İcarəyə Götür</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="/CarPricing/Index" class="btn btn-primary py-3 px-4">Avtomobil qiymətlərimizi  görün</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    @await Component.InvokeAsync("_DefaultLast5CarsWithBrandsComponentPartial");

    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceViewComponentPartial")

    @await Component.InvokeAsync("_BecomeADriverComponentPartial")
    @await Component.InvokeAsync("_TestimonialComponentPartial")


    @await Component.InvokeAsync("_GetLas3BlogsWithAuthorsComponentPartial")
    @await Component.InvokeAsync("_DefaultStatisticsComponentPartial")
    @await Component.InvokeAsync("_FooterUILayoutViewComponentPartial")
    @await Component.InvokeAsync("_ScriptUILayoutViewComponentPartial")
</body>
</html>

