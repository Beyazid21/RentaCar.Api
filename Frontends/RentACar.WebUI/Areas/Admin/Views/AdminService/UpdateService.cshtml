@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLoyaut/Index.cshtml";
}





<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yer Yeniləmə Səhifəsi</h4>
                        <p class="card-subtitle mb-4">Yeri Buradan Yenilənir</p>

                        <form method="post">
                            <input type="hidden" asp-for="ServiceId" />
                            <div class="form-group">
                                <label for="exampleInputModel">Başlıq</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Title" placeholder="Adi yazın">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Təsvir</label>
                                <textarea type="text" class="form-control" id="exampleInputModel" asp-for="Description" placeholder="Təsviri yazın"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Ikonun Urlsi</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="IconUrl" placeholder="Ikonun Urlisin yazın">
                            </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Təsdiq et</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->
    <!-- end col -->
</div>
<!-- end page title -->
