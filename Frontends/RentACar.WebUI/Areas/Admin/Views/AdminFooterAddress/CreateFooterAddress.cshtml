@model CreateFooterAddressDto
@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLoyaut/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazichi əlavə et</h4>
                        <p class="card-subtitle mb-4">Yeni Alt Ünvanlar buradan əlavə olunur</p>

                        <form method="post">


                            <label for="exampleInputModel">Təsvir</label>
                            <textarea rows="5" type="text" class="form-control" id="exampleInputModel" asp-for="Description" placeholder="Təsviri yazın">
                                    </textarea>

                            <div class="form-group">
                                <label for="exampleInputModel">Ünvan</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Address" placeholder=" Ünvanı....  yazın">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Telefon</label>
                                <input type="tel" class="form-control" id="exampleInputModel" asp-for="Phone" placeholder=" Telefonu....  yazın">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Email</label>
                                <input type="email" class="form-control" id="exampleInputModel" asp-for="Email" placeholder=" Emaili....  yazın">
                            </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Təsdiqlə</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->
    <!-- end col -->
</div>
<!-- end page title -->
