@model List<ResultAuthorDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLoyaut/Index.cshtml";

}



<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Author hissəsi</h4>
                        <p class="card-subtitle mb-4">
                            Author Hissəsi məlumatları silmə yeniləmə və əlavə etmə əmaliyyatları burdan edilir
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>

                                        <th>Ad Soyad</th>

                                        <th>Sil</th>
                                        <th>Yenilə</th>
                                        <th>Bloqların gör</th>



                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {


                                        <tr>

                                            <td> <img style="margin-right:10px" src="~/carbook-master/images/@item.ImageUrl" width="50" height="50" />@item.Name</td>
                                          
                                           



                                            <td><a class="btn btn-outline-danger" asp-area="Admin" asp-action="DeleteAuthor" asp-route-id="@item.AuthorId"> Sil</a></td>
                                            <td><a class="btn btn-outline-warning" asp-area="Admin" asp-action="UpdateAuthor" asp-route-id="@item.AuthorId"> Yenilə</a></td>
                                            <td><a class="btn btn-outline-warning" asp-area="Admin" asp-action="UpdateAuthor" asp-route-id="@item.AuthorId"> Bloqların gör</a></td>
             




                                        </tr>


                                    }


                                </tbody>

                            </table>
                            <a asp-area="Admin" asp-controller="AdminAuthor" asp-action="CreateAuthor" class="btn btn-outline-success">Əlavə Et</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>






