@model List<ResultTestimonialDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLoyaut/Index.cshtml";
    int count = 0;
}



<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Testimonial hissəsi</h4>
                        <p class="card-subtitle mb-4">
                            Testimonial Hissəsi məlumatları silmə yeniləmə və əlavə etmə əmaliyyatları burdan edilir
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>

                                        <th># </th>
                                        <th>Ad </th>
                                        <th>Başlıq </th>
                                        <th>Şərhi </th>

                                        <th>Sil</th>
                                        <th>Yenilə</th>



                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        count++;
                                        <tr>

                                            <td> @count</td>

                                            <td> @item.Name</td>
                                            <td> @item.Title</td>
                                            <td> @item.Comment</td>





                                            <td><a class="btn btn-outline-danger" asp-area="Admin" asp-action="DeleteTestimonial" asp-route-id="@item.TestimonialId"> Sil</a></td>
                                            <td><a class="btn btn-outline-warning" asp-area="Admin" asp-action="UpdateTestimonial" asp-route-id="@item.TestimonialId"> Yenilə</a></td>







                                        </tr>


                                    }


                                </tbody>

                            </table>
                            <a asp-area="Admin" asp-controller="AdminTestimonial" asp-action="CreateTestimonial" class="btn btn-outline-success">Əlavə Et</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>






